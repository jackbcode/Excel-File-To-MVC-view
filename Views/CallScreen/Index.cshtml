@model DailyCalls.Models.DailyCall

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Call Outcome</h2>

@using (Html.BeginForm("Index", "CallScreen", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 clientInfo">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control noEdit" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ClientReference, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ClientReference, new { htmlAttributes = new { @class = "form-control noEdit" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TelephoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TelephoneNumber, new { htmlAttributes = new { @class = "form-control noEdit" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control noEdit" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OutcomeId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.OutcomeId, Model.Outcomes, "Select Outcome", new { @id = "outcomedd", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.OutcomeId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LastCalled, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LastCalled, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index","home")
</div>
